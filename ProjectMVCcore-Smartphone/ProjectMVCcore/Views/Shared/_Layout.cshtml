<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title</title>
    <link href="~/libs/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <script src="~/libs/bootstrap/js/bootstrap.bundle.js"></script>
    <link href="~/libs/picker/css/bootstrap-datepicker.standalone.css" rel="stylesheet" />
    <style>
        body {
            padding-top: 70px;
        }
    </style>
    @await RenderSectionAsync("styles", false)
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-brand bg-info navbar-expand-md fixed-top shadow-sm">
        <div class="container ">
            <span class="navbar-brand text-white">Smartphones Configurations</span>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item text-white">
                        <a class="nav-link text-white" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item ">
                        <a class="nav-link text-white" asp-controller="Smartphones" asp-action="Index">Smartphone</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <main class="container-fluid" style="min-height:calc(100vh - 100px)">
        @RenderBody()
    </main>
    <script src="~/libs/jquery/jquery.js"></script>

    <footer class="container-fluid text-center bg-info text-white">
        <p>@DateTime.Today.ToString("MMM dd, yyyy") &copy; All Right Reserved By MIH</p>
    </footer>
    @await RenderSectionAsync("scripts", false)
</body>
</html>
